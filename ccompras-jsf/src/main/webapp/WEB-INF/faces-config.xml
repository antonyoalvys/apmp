<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<default-time-zone-id>America/Sao_Paulo</default-time-zone-id>
		</locale-config>

		<message-bundle>ValidationMessages</message-bundle>

		<resource-bundle>
			<base-name>widgets</base-name>
			<var>wds</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>entities</base-name>
			<var>lbl</var>
		</resource-bundle>

		<converter>
			<converter-id>localDateConverter</converter-id>
			<converter-class>br.com.apmp.ccompras.converters.LocalDateConverter</converter-class>
		</converter>
		<converter>
			<converter-id>localDateTimeConverter</converter-id>
			<converter-class>br.com.apmp.ccompras.converters.LocalDateTimeConverter</converter-class>
		</converter>		
	</application>

</faces-config>
